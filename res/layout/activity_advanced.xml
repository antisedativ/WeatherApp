<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".AdvancedActivity">

    <TextView
        android:id="@+id/day1_desc_adv"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/day2_desc_adv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.824"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />

    <TextView
        android:id="@+id/day2_desc_adv"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="260dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/day3_desc_adv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.824"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/day3_desc_adv"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="392dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/day4_desc_adv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.824"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/day4_desc_adv"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.837" />

    <ImageView
        android:id="@+id/day3_icon_adv"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="392dp"

        app:layout_constraintBottom_toTopOf="@+id/day4_icon_adv"
        app:layout_constraintEnd_toStartOf="@+id/day3_desc_adv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/w01d" />

    <ImageView
        android:id="@+id/day1_icon_adv"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="120dp"

        app:layout_constraintBottom_toTopOf="@+id/day2_icon_adv"

        app:layout_constraintEnd_toStartOf="@+id/day1_desc_adv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.191"
        app:srcCompat="@drawable/w01d" />

    <ImageView
        android:id="@+id/day4_icon_adv"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/day4_desc_adv"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.829"
        app:srcCompat="@drawable/w01d" />

    <ImageView
        android:id="@+id/day2_icon_adv"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="260dp"

        app:layout_constraintBottom_toTopOf="@+id/day3_icon_adv"
        app:layout_constraintEnd_toStartOf="@+id/day2_desc_adv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/w01d" />

    <Button
        android:id="@+id/back_btn_adv"
        android:layout_width="114dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/main_button"
        android:fontFamily="sans-serif"
        android:text="@string/back_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:id="@+id/header_adv"
        android:layout_width="223dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="@string/header_adv"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"

        app:layout_constraintBottom_toTopOf="@+id/day1_desc_adv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138" />

</androidx.constraintlayout.widget.ConstraintLayout>